{
  "globals": {
    "THREE": true,
    "TweenMax": true,
    "dat": true,
    "Quint": true
  },
  "extends": [
    "eslint:recommended", 
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script"
  },
  "rules": {
    "eqeqeq": 1,
    "curly": 1,
    "no-console": 1,
    "quotes": [
      1, "single"
    ]
  },
  "overrides": [
    {
      "files": [ "./src/**/*.js" ]
    }
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "typedef": [ true, "call-signature", "arrow-call-signature" ]

}
